<resources>

    <style name="score_headers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
    </style>

    <style name="score_subheaders">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <style name="radio_button_style">
        <item name="android:layout_marginStart">@dimen/radio_padding_horizontal</item>
        <item name="android:layout_marginTop">@dimen/radio_padding_vertical</item>
        <item name="android:layout_marginEnd">@dimen/radio_padding_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/radio_padding_vertical</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
